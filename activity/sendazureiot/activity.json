{
  "name": "sendazureiot",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref":"github.com/pradyuz3rocool/flogo-workspace/activity/sendazureiot",
  "description": "Creates an activity to send a message to Azure IOT Hub",
  "author": "Pradyumna Chakicherla <pradyumna.chakicherla@isteer.com>",
  "inputs":[
    {
      "name": "connectionString",
      "type": "string",
      "required": true
    },
    {
      "name": "Device ID",
      "type": "string"
    },
    {
      "name": "Action",
      "type": "string",
      "required": true,
      "allowed": ["Send"]
    },
    {
      "name": "message",
      "type": "string"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type":"any"
    },
    {
      "name": "status",
      "type":"any"
    }
  ]
}